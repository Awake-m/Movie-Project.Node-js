</head>
<body>
    <section id="table1">
        <h1 style="text-align: center; margin-top: 150px;">Movie Dtails</h1>
    <table class="table text-center container mt-5">
        <thead>
          <tr>
            <th scope="col">Movie-Name</th>
            <th scope="col">Select Date</th>
            <th scope="col">Select Time</th>
            <th scope="col">Image</th>
            <th scope="col">Seats</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <%data.map((val)=>{%>
            <tr>
                <td><%=val.moviename%></td>
                <td><%=val.lstdate%></td>
                <td><%=val.showtime%></td>
                <td>
                    <img src="<%=val.image%>" width="50px" height="50px">
                </td>
                <td><%=val.showseat%></td>
                <td>
                    <a href="delete?id=<%=val.id%>" class="text-danger"><i class="fa-solid fa-trash-can"></i></a>
                    <a href="edit?id=<%=val.id%>" class="text-denger ms-4"><i class="fa-solid fa-user-pen"></i></a>
                </td>
            </tr>
        <%})%>
      <tr>

      </tr>
      </table>
    </section>
</body>
</html>